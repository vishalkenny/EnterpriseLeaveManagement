@model IReadOnlyList<EnterpriseLeaveManagement.ViewModels.Leave.LeaveSummaryViewModel>
@{
    ViewData["Title"] = "HR Leave Overview";

    var total = Model.Count;
    var pending = Model.Count(l => l.Status == EnterpriseLeaveManagement.Services.LeaveService.LeaveStatus.Pending);
    var approved = Model.Count(l => l.Status == EnterpriseLeaveManagement.Services.LeaveService.LeaveStatus.Approved);
    var rejected = Model.Count(l => l.Status == EnterpriseLeaveManagement.Services.LeaveService.LeaveStatus.Rejected);
}

<div class="page-header mb-4">
    <div>
        <h2 class="page-title mb-1">All Leave Requests</h2>
        <p class="page-subtitle mb-0">Full overview of all employee leave requests across the organization.</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <h6 class="text-muted text-uppercase mb-1">Total Requests</h6>
                <div class="display-6">@total</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <h6 class="text-muted text-uppercase mb-1">Pending</h6>
                <div class="display-6">@pending</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <h6 class="text-muted text-uppercase mb-1">Approved</h6>
                <div class="display-6 text-success">@approved</div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="card shadow-sm h-100">
            <div class="card-body text-center">
                <h6 class="text-muted text-uppercase mb-1">Rejected</h6>
                <div class="display-6 text-danger">@rejected</div>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        @if (Model.Count == 0)
        {
            <div class="p-4 text-center text-muted">
                There are no leave requests in the system yet.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover table-modern mb-0">
                    <thead>
                    <tr>
                        <th>Employee</th>
                        <th>Type</th>
                        <th>Start</th>
                        <th>End</th>
                        <th>Status</th>
                        <th>Requested</th>
                        <th class="text-end">Override</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.EmployeeId</td>
                            <td>
                                <span class="badge rounded-pill bg-light text-dark">
                                    @item.LeaveType
                                </span>
                            </td>
                            <td>@item.StartDate.ToString("dd MMM yyyy")</td>
                            <td>@item.EndDate.ToString("dd MMM yyyy")</td>
                            <td>
                                <span class="badge status-badge status-@item.Status.ToLowerInvariant()">
                                    @item.Status
                                </span>
                            </td>
                            <td>@item.CreatedOn.ToString("dd MMM yyyy HH:mm")</td>
                            <td class="text-end">
                                <form asp-action="Override" method="post" class="d-inline-flex align-items-center">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.LeaveId" />
                                    <select name="newStatus" class="form-select form-select-sm w-auto">
                                        <option value="Pending" selected="@(item.Status == "Pending")">Pending</option>
                                        <option value="Approved" selected="@(item.Status == "Approved")">Approved</option>
                                        <option value="Rejected" selected="@(item.Status == "Rejected")">Rejected</option>
                                    </select>
                                    <input type="text" name="remarks" class="form-control form-control-sm ms-1" placeholder="Remarks" />
                                    <button type="submit" class="btn btn-sm btn-warning ms-1">Apply</button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>



